      <param-name>pageName</param-name>
      <param-value>Contact</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>contact</servlet-name>
    <url-pattern>/contact.op</url-pattern>
  </servlet-mapping>
  <servlet>
