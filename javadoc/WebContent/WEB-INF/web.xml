    <servlet-name>test</servlet-name>
    <url-pattern>/test.op</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>gameplatform.servlet.IndexPage</servlet-class>
